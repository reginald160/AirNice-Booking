@model AirNice.Models.DTO.UserDTO.LoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="no-bottom no-top" id="content">
    <div id="top"></div>
    
    <section class="relative no-top no-bottom vertical-center" data-bgimage="url(../BLUETEC_HTML/images/background/5.jpg) top" data-stellar-background-ratio=".5">
        <form asp-controller="User" asp-action="Login">
        <div class="overlay-gradient t50">
            <div class="center-y relative">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-12 offset-md-0 text-light">
                            <h1 class="wow fadeInUp" data-wow-delay=".5s">Better <span class="id-color">marketing</span> tools</h1>
                            <p class="lead wow fadeInUp" data-wow-delay=".75s"></p>
                        </div>

                        <div class="col-lg-4 offset-lg-2 text-center wow fadeIn" data-wow-delay=".5s">
                            <div class="box-rounded padding40" data-bgcolor="#ffffff">
                                <h3 class="mb10">Sign In</h3>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor.</p>
                                <div id='contact_form' class="form-border">
                                    <span class="text-danger">@ViewBag.Message</span>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="field-set">
                                        <input name="email" asp-for="Email" id='email' class="form-control" placeholder="Email" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>

                                    <div class="field-set  pt-3">
                                        <input name="password" asp-for="Password" id='password' class="form-control" placeholder="Password" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="field-set">
                                        <input type="submit" id='send_message' value='Login' class="btn btn-custom btn-fullwidth color-2">
                                    </div>

                                    <div class="clearfix"></div>

                                    <div class="spacer-single"></div>

                                    <!-- social icons -->
                                    <ul class="list s3">
                                        <li>Dont have account ?:</li>
                                        <li><a  asp-controller="Passenger" asp-action="Register">Register</a></li>
                            
                                    </ul>
                                    <!-- social icons close -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       </form>
    </section>
    @*<script>
        $('#send_message').click(function () {
            alert("Hello");
        }
        );
    </script>*@

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
