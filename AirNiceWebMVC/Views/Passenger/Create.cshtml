@model AirNice.Models.ViewModels.Passenger.PassengerViewModel

@{
    ViewData["Title"] = "New Passenger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

   
<hr />
    <section >
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1>Create Question</h1>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <textarea asp-for="Name" class="form-control"></textarea>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <textarea asp-for="Phone" class="form-control"></textarea>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <textarea asp-for="Email" class="form-control"></textarea>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                  

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </section>




    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
